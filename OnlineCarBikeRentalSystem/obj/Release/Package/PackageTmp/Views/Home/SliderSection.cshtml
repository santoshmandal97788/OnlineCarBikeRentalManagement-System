
    <section id="home-slider-area">
        @foreach (var item in Model)
        {
            if (item.SliderId == 3)
            {
                <div class="home-slider-item slider-bg-1 overlay">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="slideshowcontent">

                                    <h1>@Html.Raw(item.Title)</h1>
                                    <p>@Html.Raw(item.Description)</p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (item.SliderId == 4)
            {
                <div class="home-slider-item slider-bg-2 overlay">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="slideshowcontent">

                                    <h1>@Html.Raw(item.Title)</h1>
                                    <p>@Html.Raw(item.Description)</p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="home-slider-item slider-bg-3 overlay">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="slideshowcontent">

                                    <h1>@Html.Raw(item.Title)</h1>
                                    <p>@Html.Raw(item.Description)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }



    </section>

<!--== Slider Area End ==-->
