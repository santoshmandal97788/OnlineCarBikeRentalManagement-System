
<!--== About Us Area Start ==-->
<section id="about-area" class="section-padding">
    <div class="container">
        @foreach (var item in Model)
        {
          if (item.AboutUsId == 1)
          {
            <div class="row">
                <!-- Section Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>About us</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <p>@item.SubHeadingParagraph</p>
                    </div>
                </div>
                <!-- Section Title End -->
            </div>
            <div class="row">
                <!-- About Content Start -->
                <div class="col-lg-6">
                    <div class="display-table">
                        <div class="display-table-cell">
                            <div class="about-content">
                                <p>@Html.Raw(item.Content)</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- About Content End -->
                <!-- About Video Start -->
                <div class="col-lg-6">
                    <div class="about-image">
                        <img src="~/img/AboutUs/@item.Image" alt="JSOFT">
                    </div>
                </div>
                <!-- About Video End -->
            </div>
          }
        }
        <!-- About Fretutes Start -->
            <div class="about-feature-area">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        if (item.AboutUsId == 1)
                        {
                            <!-- Single Fretutes Start -->
                            <div class="col-lg-4">
                                <div class="about-feature-item active">
                                    <i class="fa fa-@item.Icon"></i>
                                    <h3>@item.CardHeading</h3>
                                    <p>@Html.Raw(item.CardParagraph)</p>
                                </div>
                            </div>
                        }
                            <!-- Single Fretutes End -->

                        if (item.AboutUsId == 2)
                        {
                                <!-- Single Fretutes Start -->
                                <div class="col-lg-4">
                                    <div class="about-feature-item">
                                        <i class="fa fa-@item.Icon"></i>
                                        <h3>@item.CardHeading</h3>
                                        <p>@Html.Raw(item.CardParagraph)</p>
                                    </div>
                                </div>
                                <!-- Single Fretutes End -->
                        }
                        if (item.AboutUsId == 3)
                        {
                                <!-- Single Fretutes Start -->
                                <div class="col-lg-4">
                                    <div class="about-feature-item">
                                        <i class="fa fa-@item.Icon"></i>
                                        <h3>@item.CardHeading</h3>
                                        <p>@Html.Raw(item.CardParagraph)</p>
                                    </div>
                                </div>
                        }
                            <!-- Single Fretutes End -->
                    }
                </div>
            </div>
        <!-- About Fretutes End -->
    </div>
</section>
<!--== About Us Area End ==-->
