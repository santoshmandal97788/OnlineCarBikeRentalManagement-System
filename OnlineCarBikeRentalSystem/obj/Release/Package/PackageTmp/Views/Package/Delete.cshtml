@model OnlineCarBikeRentalSystem.Models.ViewModel.PackageViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        @*<dt>
                @Html.DisplayNameFor(model => model.PackageId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PackageId)
            </dd>*@

        <dt>
            @Html.DisplayNameFor(model => model.PackageHeading)
        </dt>

        <dd>
            @Html.TextArea("PackageHeading", new { @class = "ckeditor", @id = "packageheading" })
            <script>
                var editor = CKEDITOR.instances["packageheading"];
                if (editor) { editor.destroy(true); }
                CKEDITOR.replace("packageheading");
            </script>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ListPackage)
        </dt>

        <dd>
            @Html.TextArea("ListPackage", new { @class = "ckeditor", @id = "aboutme" })
            <script>
                var editor = CKEDITOR.instances["aboutme"];
                if (editor) { editor.destroy(true); }
                CKEDITOR.replace("aboutme");
            </script>
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-left:190px;">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <button type="button" class="btn btn-info">@Html.ActionLink("Back to List", "Index")</button>
        </div>
    }
</div>
