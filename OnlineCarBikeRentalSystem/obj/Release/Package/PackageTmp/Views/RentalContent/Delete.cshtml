@model OnlineCarBikeRentalSystem.Models.ViewModel.RentalContentViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Heading)
        </dt>

        <dd>
            @Html.TextBoxFor(model => model.Heading, new { @class = "form-control" }) <br />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FeatureList)
        </dt>

        <dd>
            @Html.TextArea("FeatureList", new { @class = "ckeditor", @id = "aboutme" })
            <script>
                var editor = CKEDITOR.instances["aboutme"];
                if (editor) { editor.destroy(true); }
                CKEDITOR.replace("aboutme");
            </script>
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-left:190px;">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <button type="button" class="btn btn-info">@Html.ActionLink("Back to List", "Index")</button>
        </div>
    }
</div>
