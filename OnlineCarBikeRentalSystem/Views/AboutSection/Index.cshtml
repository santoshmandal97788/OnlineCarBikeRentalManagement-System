<h1 class="text-center">About Us Content List</h1>
<table class="table table-striped table table-bordered">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AboutUsId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubHeadingParagraph)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
