    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AboutUsId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubHeadingParagraph)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Icon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardHeading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardParagraph)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditContent", new { id = item.AboutUsId }, new { @class = "btn btn-info" })
